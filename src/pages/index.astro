  <script>
    document.addEventListener("DOMContentLoaded", () => {
      let path;

      // Funktion til at vælge det rigtige path baseret på skærmstørrelse
      function selectPath() {
        if (window.innerWidth >= 1024) {
          // Stor skærm: Vælg path fra den store SVG
          path = document.querySelector(".large-screen path");
        } else {
          // Lille skærm: Vælg path fra den lille SVG
          path = document.querySelector(".small-screen path");
        }

        // Hvis der ikke findes et path (f.eks. ved fejl), stop
        if (!path) return;

        const pathLength = path.getTotalLength();

        // Initial indstillinger: skjul hele linjen
        path.style.strokeDasharray = pathLength + " " + pathLength;
        path.style.strokeDashoffset = pathLength;

        // Få højden af dit indhold
        const contentHeight =
          document.documentElement.scrollHeight -
          document.documentElement.clientHeight;

        // Scroll event handler
        function updateLineOnScroll() {
          const scrollTop = document.documentElement.scrollTop;

          // Beregn scroll-procent baseret på indholdets højde
          const scrollPercentage = scrollTop / contentHeight;

          // Beregn hvor meget af linjen der skal tegnes
          let drawLength = pathLength * scrollPercentage;

          // Begræns linjens længde til den faktiske længde af pathen
          if (drawLength > pathLength) {
            drawLength = pathLength;
          }

          // Juster hastigheden afhængigt af skærmstørrelsen
          if (window.innerWidth >= 1024) {
            const speedMultiplier = 1.25; // Juster for store skærme
            drawLength *= speedMultiplier;
          } else {
            const speedMultiplier = 1; // Juster for små skærme
            drawLength *= speedMultiplier;
          }

          // Sæt strokeDashoffset for at opdatere linjens længde
          path.style.strokeDashoffset = pathLength - drawLength;

          // Brug requestAnimationFrame for en flydende animation
          requestAnimationFrame(updateLineOnScroll);
        }

        // Start animationen
        updateLineOnScroll();

        // Opdater animationen, hvis vinduet ændres
        window.addEventListener("resize", () => {
          // Vælg den rigtige path igen ved resize
          selectPath();
        });
      }

      // Kald funktionen for første gang for at vælge det rigtige path
      selectPath();
    });
  </script>

  <style>
    .svg-container {
